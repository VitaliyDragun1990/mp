<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>myphotos</artifactId>
		<groupId>com.revenat</groupId>
		<version>1.0</version>
	</parent>

	<artifactId>myphotos-ear</artifactId>
	<packaging>ear</packaging>

	<name>myphotos-ear</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>3.0.1</version>
				<configuration>
					<version>7</version>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<modules>
						<jarModule>
							<groupId>com.revenat</groupId>
							<artifactId>myphotos-model</artifactId>
							<bundleDir>/lib/</bundleDir>
							<bundleFileName>myphotos-model.jar</bundleFileName>
						</jarModule>
						<jarModule>
							<groupId>com.revenat</groupId>
							<artifactId>myphotos-common</artifactId>
							<bundleDir>/lib/</bundleDir>
							<bundleFileName>myphotos-common.jar</bundleFileName>
						</jarModule>
						<ejbModule>
							<groupId>com.revenat</groupId>
							<artifactId>myphotos-ejb</artifactId>
							<bundleFileName>myphotos-ejb.jar</bundleFileName>
						</ejbModule>
						<webModule>
							<groupId>com.revenat</groupId>
							<artifactId>myphotos-web</artifactId>
							<bundleFileName>myphotos-web.war</bundleFileName>
							<contextRoot>/</contextRoot>
						</webModule>
<!-- 						<webModule>
							<groupId>com.revenat</groupId>
							<artifactId>myphotos-rest</artifactId>
							<bundleFileName>myphotos-web.war</bundleFileName>
							<contextRoot>/api</contextRoot>
						</webModule>
						<webModule>
							<groupId>com.revenat</groupId>
							<artifactId>myphotos-ws</artifactId>
							<bundleFileName>myphotos-web.war</bundleFileName>
							<contextRoot>/ws</contextRoot>
						</webModule> -->
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>com.revenat</groupId>
			<artifactId>myphotos-model</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>com.revenat</groupId>
			<artifactId>myphotos-common</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>com.revenat</groupId>
			<artifactId>myphotos-ejb</artifactId>
			<version>1.0</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.revenat</groupId>
			<artifactId>myphotos-web</artifactId>
			<version>1.0</version>
			<type>war</type>
		</dependency>
<!-- 		<dependency>
			<groupId>com.revenat</groupId>
			<artifactId>myphotos-rest</artifactId>
			<version>1.0</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>com.revenat</groupId>
			<artifactId>myphotos-ws</artifactId>
			<version>1.0</version>
			<type>war</type>
		</dependency> -->
	</dependencies>

</project>
